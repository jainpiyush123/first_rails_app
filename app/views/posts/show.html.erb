<center>
<h1><%= @post.title %></h1>
<div><%= @post.body %></div>
<br>

<h2><%= @post.comments.count %> Comments</h2><br>
<%= render @post.comments %><br>
<h3>Add a Comment</h3>
<%= render "comments/form" %>

<%= link_to 'Edit Post', edit_post_path(@post) %>
<%= link_to 'Delete Post', post_path(@post), method: :delete, data: {confirm: "Do you really want to delete it?"} %>
</center>
